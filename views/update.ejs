
<div class="px-4 py-5 my-5 text-center">
    
  <h1 class="display-5 fw-bold">update Bookings</h1>

</div>

<div class="row justify-content-center">  
  
  <% if(infoSubmitObj1 != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj1 %>
    </div>
  <% } %>

  <% if(infoErrorsObj1 != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj1[0].message %>
    </div>
  <% } %>
  
  <div class="col-8">
    <% if(recipe != '') { %>
        <% recipe.forEach(function(Recipe, index){ %>
    <form action="/update/<%= Recipe._id %>" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3"> 
   
    

        <div class="col-12">
          <label for="name" class="form-label">Customer Name</label>
          <input type="text" name="name" id="name" class="form-control" value="<%= Recipe.name %>" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Drone shot description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4"><%= Recipe.description%></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Types</label><br>
          <small>Example: Type1</small>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control" value="<%= Recipe.ingredients %>">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Type</button>
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected><%= Recipe.category %></option>
            <option value="Thai">Thailand</option>
            <option value="American">America</option>
            <option value="Chinese">China</option>
            <option value="Mexican">Mexico</option>
            <option value="Indian">India</option>
          </select>
        </div>
    
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Update Bookings</button>
        </div>

      </div>
    
    </form>
    <% }) %>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </div>
</div>