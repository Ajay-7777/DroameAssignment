

<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Book drone shot  location</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead"> Book different location for drone shot </p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-Recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">
        <div class="col-12">
          <label for="name" class="form-label">Customer Name</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Drone shot description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Drone shot type</label><br>
          <small>Example: Type1</small>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Type</button>
        </div>

        <div class="col-12">
          <label for="category">Select location</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Select location</option>
            <option value="Thai">Thai</option>
            <option value="American">America</option>
            <option value="Chinese">China</option>
            <option value="Mexican">Mexico</option>
            <option value="Indian">India</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Location Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Book</button>
        </div>

      </div>
    
    </form>

  </div>
</div>